doctype html

html
  head
    title Sign
    meta(charset='UTF-8')
    link(rel="stylesheet", type="text/css", href="/stylesheets/login.css")
    link(rel="icon", type="image/gif", href="/images/icon.jpg")
    script(src="/javascripts/jquery-3.2.1.min.js")
    script(src="/javascripts/sign.js")
  body
  #topError #{errorMsg.top}
  #field
    h1 Sign in
    form#sign-area(action="/" method="post")
      .row
        label(for="username")
        img.psd(alt="username", src="/images/user.png")
        input#username.data(type="text" name="username" value="#{username}" placeholder="Username")
        .error #{errorMsg.username}
      .row
        label(for="password")
        img.psd(alt="lockon", src="images/lockon.jpg")
        input#password.data(type="password" name="password"  placeholder="Password")
        .error #{errorMsg.password}
      #button-field
        input#reset.button(type="reset" value="重置")
        input.button(type="submit" value="登录")
      div
        a.loadto(href="regist") regist